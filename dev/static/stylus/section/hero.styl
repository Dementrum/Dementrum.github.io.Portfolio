.hero 
	height 600px
	overflow hidden
	position relative

.hero__title
	absolute($top:50%)
	transform translateY(-50%)
	text-align center
	min-width 100%
	col(null, center)

.hero__bg-img
	min-width 100%

.hero__user-block
	absolute-center()

.section__title
	min-width 80%

.user__photo-avatar
	size(150px)
	border-radius 50%
	overflow hidden
	position relative
	margin 0 auto

.own-photo
	absolute-center()

.user__name
	color #fff
	font-size em(30, 14)

.user-desc 
	font-size em(20, 14)
