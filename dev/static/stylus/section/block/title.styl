.title
	color gray
	letter-spacing 1.57px
	font-size 63px
	bernier()
	position relative
	margin 0 auto
	padding 0 70px
	background-size 100%
	background-position center center 
	background-repeat no-repeat
	
	&.about__section-subtitle
		font-size 35px
		margin 40px 0 40px 0
	
	&:after, &:before
		content ""
		display block
		centered(y)
		width 22px
		height 5px
		background rgba(gray, 0.2)
	&:after
		right 30px
	&:before
		left 30px
		
