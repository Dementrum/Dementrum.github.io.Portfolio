@import 'fonts.styl'
@import 'vars.styl'
@import 'libs.styl'
@import 'utils/mixins.styl'

html
	height 100%
	line-height 1.3
	font-size 16px


body
	height 100%
	margin 0
	font-family mainFont
	font-size 14px
	line-height 1.42
	-webkit-font-smoothing antialiased


h1,h2,h3,h4,h5,h6
	margin-top 0
	margin-bottom 0
	font-weight normal


ul,li
	margin 0
	padding 0
	list-style-type none

p
	margin 0

a
	text-decoration none
	color black

audio,
canvas,
iframe,
img,
svg,
video
	vertical-align middle


textarea
	resize none


section
	position relative


input,
select,
button
	outline none

*, *:before, *:after
	box-sizing border-box


// Общие стили
@import 'common_styles.styl'


// МОДУЛИ
// Стили шапки
@import 'modules/header/header.styl'

// Стили футера
@import 'modules/footer/footer.styl'

// Стили меню
@import 'modules/navigation/main-nav.styl'

//Компоненты
@import "components/components.styl"


// СТРАНИЦЫ
// Стили главной страницы
@import 'pages/index.styl'

// Стили блока hero
@import './section/hero/**/*' 

